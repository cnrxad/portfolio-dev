---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import Github from "../components/icons/Github.astro";
import Instagram from "../components/icons/Instagram.astro";
import Steam from "../components/icons/Steam.astro";
import Gmail from "../components/icons/Gmail.astro";
---

<Layout title="Portfolio de cnrxad - Desarrollador y Programador Web con 2 años de experiencia" description="Contrata a cnrxad para crear la aplicación web de tus sueños.">
  <main>
    <section class="w-full lg:w-[740px] mx-auto py-44">
      <img
        class="rounded-full w-16 h-16"
        src="https://avatars.githubusercontent.com/u/105384316?v=4"
        alt="cnrxad"
      />

      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
        Hey, soy cnrxad <a
          href="https://github.com/cnrxad"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>En la cola del INEM</Badge></a
        >
      </h1>
      <h2 class="text-2xl opacity-85">
        +2 años de experiencia. <span class="text-yellow-100"
          >Desarrollador Web.</span
        > De <span class="text-blue-200">Galiza</span>, España 🇪🇸
      </h2>

      <nav class="flex gap-x-8 mt-16 h-12 justify-center">
        <SocialPill href="https://github.com/cnrxad">
          <Github class="w-4 h-4" />
          Github
        </SocialPill>
        <SocialPill href="https://instagram.com/cnrxad">
          <Instagram class="w-4 h-4" />
          Instagram
        </SocialPill>
        <SocialPill href="https://steamcommunity.com/id/cnrxad/">
          <Steam class="w-4 h-4" />
          Steam
        </SocialPill>
        <SocialPill href="https://cnrxad@gmail.com">
          <Gmail class="w-4 h-4" />
          cnrxad@gmail.com
        </SocialPill>
      </nav>
    </section>
  </main>
</Layout>
